        Title="LoginView" Height="550" Width="800" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" MouseDown="Window_MouseDown">
    <Window.DataContext>
        <viewModel:ShareViewModel/>
    </Window.DataContext>
    
