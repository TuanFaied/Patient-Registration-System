                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#FF61DAE6"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
